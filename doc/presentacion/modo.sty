% Modificación del fondo
\newcommand{\cambiarfondo}[1]{%
\setbeamertemplate{background}{%
\includegraphics[width=\paperwidth,height=\paperheight]{#1}
}}
% Vaciar fondo
\newcommand{\sinfondo}{%
\setbeamertemplate{background}{}
}
% --------------------------------------------------------------------
% Definición de comportamiento en cada nueva subsección:
%  -> Título en función de sección y subsección
\AtBeginSubsection[]
{
  \begin{frame}<beamer>
   \frametitle{Índice}
   \transdissolve
   \tableofcontents[currentsection,currentsubsection]
  \end{frame}
}
% --------------------------------------------------------------------
% Márgenes:
% ========
% Márgenes laterales (adecuación con el fondo)
\setbeamersize{text margin left=1.5cm, text margin right=1.5cm}
% Cambiar márgenes
\newenvironment{cambiarmargen}[2]{%
 \begin{list}{}{%
  \setlength{\topsep}{0pt}%
  \setlength{\leftmargin}{#1}%
  \setlength{\rightmargin}{#2}%
  \setlength{\listparindent}{\parindent}%
  \setlength{\itemindent}{\parindent}%
		  \setlength{\parsep}{\parskip}%
		  }%
 \item[]}{\end{list}}
